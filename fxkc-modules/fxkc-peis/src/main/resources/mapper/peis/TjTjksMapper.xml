<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.fxkc.peis.mapper.TjTjksMapper">

    <!-- 多结构嵌套自动映射需带上每个实体的主键id 否则映射会失败 -->
    <resultMap type="org.fxkc.peis.domain.vo.TjTjksBasicNameVo" id="TjKsListResult">
        <id property="id" column="id"/>
    </resultMap>

    <select id="queryTjKsListByBasicName" resultMap="TjKsListResult">
        select t.id,t.ks_name,t.ks_code from tj_tjks t where  t.del_flag='0'
        <if test="basicProjectName != null and basicProjectName != '' ">
            and exists (select 1 from tj_basic_project m where m.del_flag='0' and m.ks_id=t.id and m.basic_project_name like  CONCAT(CONCAT('%',#{basicProjectName}),'%') )
        </if>
    </select>
</mapper>
